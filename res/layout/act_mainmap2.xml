<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mapView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lines"
        android:orientation="vertical" >
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        layout="@layout/aty_main_search_complex" />

    <LinearLayout
        android:id="@+id/map_layer_layout"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/roadplan_layout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/map_layer"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/map_layer_fav" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/roadplan_layout"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/navi_road_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/roadplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/road_plan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navi_road_ll"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/plus_layout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/searchbg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/naviRoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/road_navi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plus_layout"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/sub_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/zoom_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_layout"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/mylocation_ll"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/zoom_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="1dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="—" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/docenter_layout"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_above="@+id/mylocation_ll"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/searchbg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/docenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@drawable/center_drvier" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mylocation_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="-8dp"
        android:background="@drawable/common_main_mixed_bg"
        android:padding="8dp" >

        <TextView
            android:id="@+id/mylocation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="我的位置"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mylocation_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mylocation_tv"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/mylocation_tv"
            android:hint="暂时无法获取精确度"
            android:text="(精确到500米)"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mylocation_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mylocation_tv"
            android:layout_below="@+id/mylocation_tv"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:hint="暂时无法获取地址信息"
            android:text="郑州市航空港区。。。。"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/select_layer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_layer_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/map_layer_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16.0dip"
            android:layout_marginTop="16.0dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type1"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:src="@drawable/main_map_mode_plain_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="普通图"
                    android:textColor="@color/darkgray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type2"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:src="@drawable/main_map_mode_3d_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交通图"
                    android:textColor="@color/darkgray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/type3"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:src="@drawable/main_map_mode_satellite_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="卫星图"
                    android:textColor="@color/darkgray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roadplan_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/map_layer_background"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lines" >

            <TextView
                android:id="@+id/tv1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择城市:" >
            </TextView>

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv1"
                android:background="@null"
                android:hint="郑州" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/split_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lines" >

            <TextView
                android:id="@+id/tv2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关 键 字:" />

            <AutoCompleteTextView
                android:id="@+id/searchkey"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv2"
                android:background="@null"
                android:hint="沃金广场" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/search_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:gravity="center"
                android:text="确认搜索" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:src="@color/darkgray" />

            <TextView
                android:id="@+id/search_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_selector"
                android:gravity="center"
                android:text="直接搜索" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>